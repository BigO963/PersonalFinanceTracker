
@using System.Collections
@model IEnumerable<PersonalTracker.Core.Models.DTOS.FinancialAccountDTO> 

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>title</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/TrackerIndex.css" />
</head>
<body>

<nav class="navbar navbar-expand-lg">
    <div class="container-fluid">
        <a class="navbar-brand text-light" href="#">Finance Tracker</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
            <div class="navbar-nav">
                <a class="nav-link active" aria-current="page" href="#">Tracker</a>
                <a class="nav-link" href="#">Account</a>
                <a class="nav-link" href="#">Logout</a>
                <a class="nav-link" href="#">Settings</a>
            </div>
        </div>
    </div>
</nav>


<main>
    <div class="accounts">
        <a asp-action="CreateFinanceAccount" class="account">
            <p>Add Account +</p>
        </a>
        @foreach (var account in Model)
        {
            <div class="account">
                <p>@account.accountName</p>
                <p>&euro;@account.initialValue</p>
            </div>
        }
    </div>

    <div class="main-info d-flex flex-lg-wrap text-center">
        
        <div class="w-50 h-50 border border-3">Circle diagram expenses structure</div>
        <div class="w-50 h-50 border border-3">Last records overview</div>
        <div class="w-50 h-50 border border-3">Balance Trend</div>
        <div class="w-50 h-50 border border-3">Upcoming planned payments</div>
        
        
    </div>

</main>

</body>
</html>